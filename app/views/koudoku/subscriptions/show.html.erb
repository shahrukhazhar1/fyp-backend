<div class="main-content update-payment-info">
  <% if @subscription.plan.present? %>
    <h1>You're Subscribed!</h1>
  <% else %>
    <h1>No Subscription</h1>
  <% end %>
  <div class="row">
    <div class="col-md-offset-3 col-md-6">
      <h3>Plans</h3>
      <% if @subscription.plan.present? %>
        <p>You're currently subscribed to the <b><%= @subscription.plan.name %></b> plan.</p>
        <%= link_to 'Choose Another Plan', edit_owner_subscription_path(@owner, @subscription), class: 'btn btn-primary' %>
      <% else %>
        <p>You are not subscribed to a paid plan.</p>
        <%= link_to 'Choose A Plan', edit_owner_subscription_path(@owner, @subscription), class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
  <br/>
  <div class="row">
    <div class="col-md-offset-3 col-md-6">
      <h3>Payment Information</h3>
      <p>The card on file for your account ends with <b><%= @subscription.last_four %>.</b></p>
      <%= link_to 'Update Payment Information', edit_owner_subscription_path(@owner, @subscription, update: 'card'), class: 'btn btn-primary' %>
    </div>
  </div>
  <br/>
  <% if !@subscription.canceled? %>
    <div class="row">
      <div class="col-md-offset-3 col-md-6">
        <h3>Cancel Subscription</h3>
        <%= link_to 'Cancel Subscription', cancel_owner_subscription_path(@owner, @subscription), class: 'btn btn-default', 'data-confirm' => 'Are you sure you would like to cancel your subscription?', method: :post %>
      </div>
    </div>
  <% end %>
</div>
