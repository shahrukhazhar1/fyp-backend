<div class="container">
  <ol class="breadcrumb">
    <li>
      <a href="/">Home</a>
    </li>
    <li>
      <a href="/devices/<%=@device.id%>"><%=@device.name%></a>
    </li>
    <li class="active">
      Quiz Results
    </li>
  </ol>
</div>

<div class="container">
  <div class="device-query-shopping-bottom">
    <div class="row">
      <div class="col-md-12">
        <div class="quiz-results">
          <h2>Quiz Results for <%= @device.name %></h2>
          <div id="new-q-table">
            <div class="row">
              <div class="col-xs-12">
                <% if @quiz_results.present? %>
                <div class="col-xs-12 quiz-queue-table sortable-uniq">
                  <% @quiz_results.each_with_index do |qs,index| %>
                    <%- quiz = qs.quiz_selection.quiz %>
                    <% index_plus = index +1 %>
                    <% test_prep = quiz.test_prep == 'Not Applicable' ? '' : quiz.test_prep %>

                    <div data-item-id = <%= "#{qs.id}"%> index-row = <%="#{index_plus}"%> class="col-xs-12 qqueue-item-row item row-margin with-hover">
                      <div class="col-xs-12 col-sm-6 col-md-4">
                        <h4 class="device-msg">
                          <b><%= quiz.name %></b>
                        </h4>
                        <p>
                          Subject: <b><%= quiz.subject %></b>
                        </p>
                        <p>
                          Test Prep: <b><%= test_prep %></b>
                        </p>
                      </div>

                      <div class="col-xs-12 col-sm-6 col-md-4">
                        <p>
                          Grades: <b><%= quiz.grades.map(&:name).join(", ") %></b>
                        </p>
                        <p>
                          Topic: <b><%= quiz.topic %></b>
                        </p>
                        <p>
                          <%= quiz_status_tag @device.id,quiz.id %>
                        </p>
                      </div>
                    </div>
                  <% end %>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

<script type="text/javascript">
  $(document).ready(function(){
  });
</script>
